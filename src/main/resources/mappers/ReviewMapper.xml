<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
 
 <mapper namespace="com.gyagoo.ex.lec02.dao.ReviewDAO">
 	<select id="selectReview" resultType="com.gyagoo.ex.lec02.model.Review"
 	parameterType="int">	<!-- 추가 -->
 		SELECT
 			`id`
 			,	`storeId`
 			,	`menu`
 			,	`userName`
 			,	`point`
 			,	`review`
 			,	`createdAt`
 			,	`updatedAt`
 		FROM
 			`new_review`
 		WHERE
 			`id` = #{id}	<!-- @param 과 일치 -->
 	</select>
 
 <!-- INSERT -->	
 	<insert id="insertReview" parameterType="map">
 		INSERT INTO `new_review`
 		(	
 			`storeId`
 			,	`menu`
 			,	`userName`
 			,	`point`
 			,	`review`
 			,	`createdAt`
 			,	`updatedAt`
 		)
 		VALUES	<!-- Param annotation 파라미터와 일치 -->
 		(
 			#{storeId}
 			, #{menu}
 			, #{userName}
 			, #{point}
 			, #{review}
 			, now()
 			, now()
 		)
 	
 	</insert>
 	
 	<insert id="insertReviewAsObject" parameterType="com.gyagoo.ex.lec02.model.Review">
 		INSERT INTO `new_review`
 		(	
 			`storeId`
 			,	`menu`
 			,	`userName`
 			,	`point`
 			,	`review`
 			,	`createdAt`
 			,	`updatedAt`
 		)
 		VALUES	<!-- Review class 의 멤버 변수 이름 -->
 		(
 			#{storeId}
 			, #{menu}
 			, #{userName}
 			, #{point}
 			, #{review}
 			, now()
 			, now()
 		)
 	</insert>
 </mapper>